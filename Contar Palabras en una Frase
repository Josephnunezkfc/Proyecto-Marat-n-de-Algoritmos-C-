#include <iostream>
#include <string>
#include <cctype> // Para la función isspace


int main() {
std::string frase;
int contadorPalabras = 0;
bool dentroDePalabra = false;


std::cout << "Ingresa una frase para contar sus palabras: ";
std::getline(std::cin, frase);


for (char c : frase) {
if (!isspace(c)) {
// Si no es un espacio y no estábamos dentro de una palabra, es una nueva palabra
if (!dentroDePalabra) {
contadorPalabras++;
dentroDePalabra = true;
}
} else {
// Si es un espacio, ya no estamos dentro de una palabra
dentroDePalabra = false;
}
}


std::cout << "El número de palabras en la frase es: " << contadorPalabras << std::endl;


return 0;
}
