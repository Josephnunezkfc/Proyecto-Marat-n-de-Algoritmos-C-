#include <iostream>


int main() {
int n, numero;
int contPares = 0, contImpares = 0;


std::cout << "¿Cuántos números vas a ingresar? ";
std::cin >> n;


if (n <= 0) {
std::cout << "La cantidad debe ser un número positivo." << std::endl;
return 1;
}


for (int i = 0; i < n; ++i) {
std::cout << "Ingresa el número " << i + 1 << ": ";
std::cin >> numero;


if (numero % 2 == 0) {
contPares++;
} else {
contImpares++;
}
}


std::cout << "Cantidad de números pares: " << contPares << std::endl;
std::cout << "Cantidad de números impares: " << contImpares << std::endl;


return 0;
}
