#include <iostream>
#include <vector>
#include <algorithm> // Para std::sort
#include <iomanip> // Para setprecision y fixed


int main() {
int n;
// 1. Pedir al usuario el tamaño del conjunto y sus elementos
std::cout << "¿Cuántos números ingresarás? ";
std::cin >> n;
if (n <= 0) return 1;
std::vector<double> datos(n);
std::cout << "Ingresa los " << n << " números:" << std::endl;
for (int i = 0; i < n; ++i) {
std::cin >> datos[i];
}
// 3. Ordenar el vector
std::sort(datos.begin(), datos.end());
double mediana;
// 4. Calcular el índice del medio
if (n % 2 == 1) {
// 5. Si n es impar
mediana = datos[n / 2];
} else {
// 6. Si n es par
mediana = (datos[n / 2 - 1] + datos[n / 2]) / 2.0;
}
// 7. Mostrar el resultado
std::cout << std::fixed << std::setprecision(2);
std::cout << "La mediana es: " << mediana << std::endl;
return 0;
}
