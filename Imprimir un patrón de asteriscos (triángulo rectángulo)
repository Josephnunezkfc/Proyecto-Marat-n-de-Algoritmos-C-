#include <iostream>


int main() {
int n;


std::cout << "Ingresa el número de filas para el triángulo: ";
std::cin >> n;


if (n <= 0) {
std::cout << "Error: El número de filas debe ser positivo." << std::endl;
return 1;
}


for (int i = 1; i <= n; ++i) {
for (int j = 1; j <= i; ++j) {
std::cout << "*";
}
std::cout << std::endl;
}


return 0;
}
