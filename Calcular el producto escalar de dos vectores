#include <iostream>
#include <vector>


int main() {
int n;
// 1. Pedir al usuario la dimensión de los vectores
std::cout << "Ingresa la dimensión de los vectores: ";
std::cin >> n;
// 2. Validar que n sea positivo
if (n <= 0) {
std::cout << "Error: La dimensión debe ser un número positivo." << std::endl;
return 1;
}
// 3. Crear dos vectores
std::vector<double> vector1(n);
std::vector<double> vector2(n);
// 4. Pedir al usuario que llene los vectores
std::cout << "Ingresa los componentes del primer vector:" << std::endl;
for (int i = 0; i < n; ++i) {
std::cin >> vector1[i];
}
std::cout << "Ingresa los componentes del segundo vector:" << std::endl;
for (int i = 0; i < n; ++i) {
std::cin >> vector2[i];
}
// 5. Inicializar el producto escalar
double productoEscalar = 0.0;
// 6. Bucle para calcular el producto escalar
for (int i = 0; i < n; ++i) {
// 7. Sumar el producto de los componentes
productoEscalar += vector1[i] * vector2[i];
}
// 8. Mostrar el resultado
std::cout << "El producto escalar de los dos vectores es: " << productoEscalar << std::endl;
return 0;
}
