#include <iostream>
#include <cstdlib> // Para rand() y srand()
#include <ctime> // Para time()


int main() {
// Inicializar la semilla para el generador de números aleatorios
srand(time(0));


int numeroSecreto = rand() % 100 + 1; // Genera un número entre 1 y 100
int intento;


std::cout << "--- Adivina el Número Secreto (1-100) ---" << std::endl;


while (true) {
std::cout << "Ingresa tu intento: ";
std::cin >> intento;


if (intento > numeroSecreto) {
std::cout << "El número secreto es menor." << std::endl;
} else if (intento < numeroSecreto) {
std::cout << "El número secreto es mayor." << std::endl;
} else {
std::cout << "¡Felicidades! Adivinaste el número secreto: " << numeroSecreto << std::endl;
break; // Sale del bucle
}
}


return 0;
}
