#include <iostream>


int main() {
int n;
// 1. Pedir al usuario que ingrese un número entero positivo n
std::cout << "Ingresa un número entero positivo: ";
std::cin >> n;
// 2. Validar que n sea positivo
if (n <= 0) {
std::cout << "Error: El número debe ser positivo." << std::endl;
return 1;
}
// 3. Bucle for para iterar hacia atrás
for (int i = n; i >= 1; --i) {
// 4. Imprimir el número y un espacio
std::cout << i << " ";
}
std::cout << std::endl; // Salto de línea al final
return 0;
}
