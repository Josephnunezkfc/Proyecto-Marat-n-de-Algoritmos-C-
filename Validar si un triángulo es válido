#include <iostream>


int main() {
double lado1, lado2, lado3;


std::cout << "Ingresa la longitud del primer lado: ";
std::cin >> lado1;
std::cout << "Ingresa la longitud del segundo lado: ";
std::cin >> lado2;
std::cout << "Ingresa la longitud del tercer lado: ";
std::cin >> lado3;


if (lado1 <= 0 || lado2 <= 0 || lado3 <= 0) {
std::cout << "Error: Las longitudes de los lados deben ser positivas." << std::endl;
return 1;
}


if (lado1 + lado2 > lado3 && lado1 + lado3 > lado2 && lado2 + lado3 > lado1) {
std::cout << "Los lados ingresados forman un tri치ngulo v치lido." << std::endl;
} else {
std::cout << "Los lados ingresados NO forman un tri치ngulo v치lido." << std::endl;
}


return 0;
}
