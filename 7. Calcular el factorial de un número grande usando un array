#include <iostream>
#include <vector>
#include <algorithm> // Para std::reverse


int main() {
int n;
// 1. Pedir al usuario un número entero positivo
std::cout << "Ingresa un número para calcular su factorial: ";
std::cin >> n;
if (n < 0) {
std::cout << "Error: El número debe ser no negativo." << std::endl;
return 1;
}
// 2. Crear un vector para los dígitos, inicializado en 1 (para 0! y 1!)
std::vector<int> digitos = {1};
// 3. Bucle exterior para multiplicar de 2 a n
for (int i = 2; i <= n; ++i) {
int acarreo = 0;
// 5. Recorrer los dígitos para multiplicar por i
for (int j = 0; j < digitos.size(); ++j) {
int producto = digitos[j] * i + acarreo;
digitos[j] = producto % 10;
acarreo = producto / 10;
}
// 6. Manejar el acarreo restante
while (acarreo > 0) {
digitos.push_back(acarreo % 10);
acarreo /= 10;
}
}
// 7. Imprimir el resultado en orden inverso
std::cout << "El factorial de " << n << " es: ";
std::reverse(digitos.begin(), digitos.end());
for (int d : digitos) {
std::cout << d;
}
std::cout << std::endl;
return 0;
}
