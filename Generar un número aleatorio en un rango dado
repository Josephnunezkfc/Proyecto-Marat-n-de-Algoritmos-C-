#include <iostream>
#include <cstdlib>
#include <ctime>


int main() {
srand(time(0));


int min, max;
std::cout << "Ingresa el valor mínimo del rango: ";
std::cin >> min;
std::cout << "Ingresa el valor máximo del rango: ";
std::cin >> max;


if (min > max) {
std::cout << "Error: El valor mínimo no puede ser mayor que el máximo." << std::endl;
return 1;
}


int rango = max - min + 1;
int numeroAleatorio = (rand() % rango) + min;


std::cout << "Número aleatorio generado entre " << min << " y " << max << ": " << numeroAleatorio << std::endl;


return 0;
}
