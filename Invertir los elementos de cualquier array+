#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Ingrese el tamaño del array: ";
    cin >> n;

    if (n <= 0) {
        cout << "El tamaño debe ser positivo." << endl;
        return 1;
    }

    int arr[n];
    for (int i = 0; i < n; ++i) {
        cout << "Ingrese el elemento " << i + 1 << ": ";
        cin >> arr[i];
    }

    // Invertir el array
    for (int i = 0; i < n / 2; ++i) {
        int temp = arr[i];
        arr[i] = arr[n - 1 - i];
        arr[n - 1 - i] = temp;
    }

    cout << "Array invertido: ";
    for (int i = 0; i < n; ++i) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
