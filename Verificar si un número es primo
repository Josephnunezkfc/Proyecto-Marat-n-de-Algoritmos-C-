#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int num;
    bool esPrimo = true;

    cout << "Ingrese un número entero positivo: ";
    cin >> num;

    if (num <= 1) {
        cout << "El número no es primo." << endl;
        return 0;
    }

    for (int i = 2; i <= sqrt(num); ++i) {
        if (num % i == 0) {
            esPrimo = false;
            break;
        }
    }

    if (esPrimo)
        cout << num << " es un número primo." << endl;
    else
        cout << num << " no es un número primo." << endl;

    return 0;
}
