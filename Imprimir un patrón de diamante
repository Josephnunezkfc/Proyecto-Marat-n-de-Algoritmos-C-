#include <iostream>


int main() {
int n;
// 1. Pedir al usuario el número de filas
std::cout << "Ingresa el número de filas para la mitad superior (debe ser impar): ";
std::cin >> n;
// 2. Validar que n sea positivo e impar
if (n <= 0 || n % 2 == 0) {
std::cout << "Error: El número debe ser positivo e impar." << std::endl;
return 1;
}
// 3. Imprimir la mitad superior del diamante
for (int i = 1; i <= n; ++i) {
// Imprimir espacios
for (int j = 0; j < n - i; ++j) {
std::cout << " ";
}
// Imprimir asteriscos
for (int k = 0; k < 2 * i - 1; ++k) {
std::cout << "*";
}
std::cout << std::endl;
}
// 4. Imprimir la mitad inferior del diamante
for (int i = n - 1; i >= 1; --i) {
// Imprimir espacios
for (int j = 0; j < n - i; ++j) {
std::cout << " ";
}
// Imprimir asteriscos
for (int k = 0; k < 2 * i - 1; ++k) {
std::cout << "*";
}
std::cout << std::endl;
}
return 0;
}
