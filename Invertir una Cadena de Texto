#include <iostream>
#include <string>
#include <algorithm> // Alternativa: std::reverse


int main() {
std::string frase;
std::string fraseInvertida = "";


std::cout << "Ingresa una frase para invertir: ";
std::getline(std::cin, frase);


// Recorrer la cadena desde el final hasta el principio
for (int i = frase.length() - 1; i >= 0; --i) {
fraseInvertida += frase[i];
}


std::cout << "Frase invertida: " << fraseInvertida << std::endl;


// Forma alternativa usando la librerÃ­a <algorithm>
// std::string fraseAlternativa = frase;
// std::reverse(fraseAlternativa.begin(), fraseAlternativa.end());
// std::cout << "Frase invertida (alternativa): " << fraseAlternativa << std::endl;


return 0;
}
