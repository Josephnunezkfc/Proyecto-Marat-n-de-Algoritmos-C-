#include <iostream>
#include <vector>
#include <cmath> // Para fabs
#include <iomanip> // Para setprecision y fixed


int main() {
int n;
// 1. Pedir al usuario el tamaño de la muestra y sus elementos
std::cout << "¿Cuántos números ingresarás? ";
std::cin >> n;
if (n <= 0) return 1;
std::vector<double> datos(n);
double suma = 0.0;
std::cout << "Ingresa los " << n << " números:" << std::endl;
for (int i = 0; i < n; ++i) {
std::cin >> datos[i];
suma += datos[i];
}
// 2. Calcular la media
double media = suma / n;
// 3. Inicializar la suma de desviaciones
double sumaCuadrados = 0.0;
// 4. Recorrer la muestra de nuevo
for (double x : datos) {
sumaCuadrados += fabs(x - media);
}
// 6. Calcular la desviación estándar
double desviacionMedia = sumaCuadrados / n;
// 7. Mostrar el resultado
std::cout << std::fixed << std::setprecision(4);
std::cout << "La desviación estándar es: " << desviacionMedia << std::endl;
return 0;
}
